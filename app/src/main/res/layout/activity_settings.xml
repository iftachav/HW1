<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="70dp"
        android:layout_marginBottom="60dp"
        ></TextView>

    <RadioGroup
        android:id="@+id/settings_RAD_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/settings_RAD_sesnor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor mode"
            android:textSize="20dp"
            ></RadioButton>
        <RadioButton
            android:id="@+id/settings_RAD_buttons_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttons mode slow"
            android:textSize="20dp"
            ></RadioButton>
        <RadioButton
            android:id="@+id/settings_RAD_buttons_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttons mode fast"
            android:textSize="20dp"
            ></RadioButton>

    </RadioGroup>


</LinearLayout>